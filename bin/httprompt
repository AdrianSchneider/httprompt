#!/usr/bin/env node
'use strict';

var program   = require('commander');
var path      = require('path');
var bootstrap = require('../src/bootstrap');

program
  .version('0.0.1')
  .option('-p --profile [value]', 'Start with profile')
  .parse(process.argv);

var configFilename = path.resolve(process.env.HOME, './.httprompt.json');
bootstrap(configFilename, process.stdin, process.stdout, program.profile || 'default', function(err, prompt) {
  if (err) {
    console.error(err);
    process.exit(1);
  }

  prompt.start();
});
